@*@model IEnumerable<Vera.Domain.Entity.Job>*@
@model List<Vera.Models.JobViewModel>

@{
    ViewBag.Title = "Работа";
}

<div class="container-fluid">
    <h2>Работа</h2>

    <p>
        @Html.ActionLink("Добавить новую услугу/работу", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].JobTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].CurrencyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].DependencyName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.JobTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CurrencyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DependencyName)
                </td>
                <td>
                    <a class="btn btn-primary" href="/Jobs/Edit/@item.Id" role="button">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                    
                    @*@Html.ActionLink("Редактировать", "Edit", new {id = item.Id}, htmlAttributes: new {@class = "btn btn-primary", role = "button"})*@
                    @*|
                    @Html.ActionLink("Детали", "Details", new { id = item.Id })
                     | *@
                    @*@Html.ActionLink("Удалить", "Delete", new { id=item.Id })*@
                </td>
            </tr>
        }
    </table>
    <div>
        @Html.ActionLink("Вернуться на главную страницу редактора", "Index", "Editor")
    </div>
</div>
