@using Vera.Models
@model Vera.Domain.Entity.Job

@{
    ViewBag.Title = "Create";
}

<h2>Создать услугу/работу</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @*<h4>Job</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Название", htmlAttributes: new { @class = "control-label col-xs-3 col-md-2" })
            <div class="col-xs-4">
                @Html.EditorFor(model => model.JobTitle, new { htmlAttributes = new { @class = "form-control", required="required" } })
                @Html.ValidationMessageFor(model => model.JobTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Стоимость", htmlAttributes: new { @class = "control-label col-xs-3 col-md-2" })
            <div class="col-xs-4">
                @Html.Editor("cost", new { htmlAttributes = new { @class = "form-control",
                autocomplete="off",
                Value = "0,00",
                onkeypress = "return event.charCode >= 48 && event.charCode <= 57 || event.charCode == 44"} })
                @*@Html.ValidationMessageFor(model => model.Pay, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Стоимость за 1", htmlAttributes: new { @class = "control-label col-xs-3 col-md-2" })
            <div class="col-xs-4">
                @Html.DropDownList("dependencyId", ViewBag.Dependencies as SelectList, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Валюта", htmlAttributes: new { @class = "control-label col-xs-3 col-md-2" })
            <div class="col-xs-4">
                RUB
                @*@Html.Editor("cost", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.JobTitle, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Создать" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Вернуться к списку", "Index")
</div>
