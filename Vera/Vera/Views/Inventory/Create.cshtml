@model Vera.Domain.Entity.Material

@{
    ViewBag.Title = "Create";
}

<div class="container-fluid">
    <h2>Добавить новый материал</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <hr />
            @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
            <div class="form-group">         
                @Html.Label("Наименование", htmlAttributes: new { @class = "control-label col-xs-3 col-md-2" })
                <div class="col-xs-4">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", autocomplete = "off", required = "required" } })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Стоимость", htmlAttributes: new { @class = "control-label col-xs-3 col-md-2" })
                <div class="col-xs-4">
                    @Html.Editor("cost", new { htmlAttributes = new { @class = "form-control", value = "0", autocomplete = "off", required = "required" } })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Валюта", htmlAttributes: new { @class = "control-label col-xs-3 col-md-2" })
                <div class="col-xs-4">
                    @Html.DropDownList("currencyId", ViewBag.Currencies as SelectList, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Тип материала", htmlAttributes: new { @class = "control-label col-xs-3 col-md-2" })
                <div class="col-xs-4">
                    @Html.DropDownList("materialTypeId", ViewBag.MaterialTypes as SelectList, new { @class = "form-control" })
                </div>
            </div>
            
            <div id="paperPartial">
                @Html.Partial("_PaperDetailsPartial")
            </div>

            <div class="form-group">
                <div class="col-xs-offset-3 col-xs-9 col-md-offset-2 col-md-10">
                    <button type="submit" value="Create" class="btn btn-success">Создать</button>
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Вернуться к списку", "Index")
    </div>
</div>

<script src="~/Scripts/inventory.js"></script>
