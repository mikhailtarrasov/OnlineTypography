@model Vera.Domain.Entity.Material

@{
    ViewBag.Title = "Edit";
}

<div class="container-fluid">
    <h2>Редактировать материал</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.Price.Id)
            @Html.HiddenFor(model => model.Price.Currency.Id)
            @Html.HiddenFor(model => model.Price.Currency.Name)
            @Html.HiddenFor(model => model.Price.Currency.Rate)
            @Html.HiddenFor(model => model.Balance)
            @Html.HiddenFor(model => model.Type.Id)
            @Html.HiddenFor(model => model.Type.TypeName)


            <div class="form-group">
                @Html.Label("Наименование", htmlAttributes: new { @class = "control-label col-xs-3 col-md-2" })
                <div class="col-xs-4">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Стоимость", htmlAttributes: new { @class = "control-label col-xs-3 col-md-2" })
                <div class="col-xs-4">
                    @Html.EditorFor(model => model.Price.Cost, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Валюта", htmlAttributes: new { @class = "control-label col-xs-3 col-md-2" })
                <div class="col-xs-4">
                    @Model.Price.Currency.Name
                </div>
            </div>

            <div class="form-group">
                <div class="col-xs-offset-3 col-xs-9 col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-primary">Применить</button>
                    <a class="btn btn-danger" href="/Inventory/Delete/@Model.Id" role="button">Удалить</a>
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Вернуться к списку", "Index")
    </div>
</div>


