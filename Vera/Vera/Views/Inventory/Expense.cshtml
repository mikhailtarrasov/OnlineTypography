@model Vera.Domain.Entity.Material

@{
    ViewBag.Title = "Expense";
}

<h2>Расход материала</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.Name)
        @Html.HiddenFor(model => model.Balance)
        @Html.HiddenFor(model => model.Price.Id)
        @Html.HiddenFor(model => model.Type.Id)
        @Html.HiddenFor(model => model.Type.TypeName)
        @Html.HiddenFor(model => model.Price.Cost)
        @Html.HiddenFor(model => model.Price.Currency.Id)
        @Html.HiddenFor(model => model.Price.Currency.Name)
        @Html.HiddenFor(model => model.Price.Currency.Rate)
        @Html.HiddenFor(model => model.SheetsPerPackage)

        <div class="form-group">
            @Html.Label("Материал", htmlAttributes: new { @class = "control-label col-xs-3 col-md-2" })
            @*@Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-xs-4">
                @Model.Name
                @*@Html.EditorFor(model => model.Name, new {htmlAttributes = new {@class = "form-control", disabled = "disabled"}})*@
                @*@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })*@
            </div>
        </div>
        @if (Model.Format != null && Model.SheetsPerPackage != null)
        {
            <div class="form-group">
                @Html.Label("Формат", htmlAttributes: new {@class = "control-label col-xs-3 col-md-2"})
                <div class="col-xs-4">
                    @Model.Format.Name
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Кол-во л/уп", htmlAttributes: new { @class = "control-label col-xs-3 col-md-2" })
                <div class="col-xs-4">
                    @Model.SheetsPerPackage
                </div>
            </div>
        }
        <div class="form-group">
            @Html.Label("Израсходовано", htmlAttributes: new { @class = "control-label col-xs-3 col-md-2" })
            <div class="col-xs-4">
                @Html.Editor("dBalance", new { htmlAttributes = new { @class = "form-control", value = "0", autocomplete = "off", required = "required" } })
                @*@Html.EditorFor(model => model.Balance, new { htmlAttributes = new { @class = "form-control" } })*@
                @*@Html.ValidationMessageFor(model => model.Balance, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            <div class="col-xs-offset-3 col-xs-9 col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">Оформить расход</button>
                @*<input type="submit" value="Оформить расход" class="btn btn-default"/>*@
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Назад к списку", "Index")
</div>

