        {
            <div class="checkbox">
                <label>
                    <input type="checkbox" id="fillister" value="Фальцовка">
                    Фальцовка
                </label>
            </div>
        }*@
        
        <h4>Печать блока</h4>
        @Html.Partial("_PrintPartial")
    </form>
</div>