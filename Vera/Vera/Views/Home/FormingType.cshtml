

<div id="formingTypeBlock">
    <form name="block" method="POST">
        <h4>@Model.Name тип формировки блока</h4>
        <div class="input-group myInputGroup">
            <span class="input-group-addon myInputGroupSpan" id="basic-addon1">Количество листов</span>
            <input type="text" class="form-control" id="countOfPage" aria-describedby="basic-addon1"
                   autocomplete="off"
                   onkeypress='return event.charCode >= 48 && event.charCode <= 57'>
        </div>
        <br/>
        <div @if (Model.Name == "Постраничный") { 
                 @: class="input-group hidden myInputGroup"
            } else { 
                 @: class="input-group myInputGroup"
            }>
            <span class="input-group-addon myInputGroupSpan" id="basic-addon2">Количество тетрадей</span>
            <input type="text" class="form-control" id="tetr" value="1" aria-describedby="basic-addon2"
                   autocomplete="off"
                   onkeypress='return event.charCode >= 48 && event.charCode <= 57'
                   @if (Model.Name == "Постраничный") {    @: readonly="readonly"
                                                          } />
        </div>


        
        @if (Model.Name == "Потетрадный")
        {
            <div class="checkbox">
                <label>
                    <input type="checkbox" id="fillister" value="Фальцовка">
                    Фальцовка
                </label>
            </div>
        }
        
        <h4>Печать блока</h4>
        <div class="input-group myInputGroup">
            <span class="input-group-addon myInputGroupSpan" id="basic-addon1">Цветность печати</span>
            @Html.DropDownList("Colorfulness", ViewBag.Colorfulness as SelectList, "Выберите цветность печати", new { @class = "form-control" })<br />
        </div> 
        <br/>
        <div class="input-group myInputGroup">
            <span class="input-group-addon myInputGroupSpan" id="basic-addon1">Бумага</span>
            @Html.DropDownList("Paper", ViewBag.Paper as SelectList, "Выберите бумагу для печати", new { @class = "form-control" })<br />
        </div>
        <br/>
        <div class="alert alert-info" id="printingAlert" role="alert"></div>
    </form>
</div>