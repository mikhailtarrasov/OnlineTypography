

<div id="formingTypeBlock">
    <h4>@Model.Name тип формировки блока</h4>
    <form name="block" method="POST">
        <div class="input-group">
            <span   class="input-group-addon" id="basic-addon1">Количество листов</span>
            <input  type="text" class="form-control" id="countOfPage" aria-describedby="basic-addon1"
                    autocomplete="off"
                    onkeypress='return event.charCode >= 48 && event.charCode <= 57'>
        </div>
        
        @if (Model.Name == "Потетрадный")
        {
            <br/>
            <div class="input-group">
              <span class="input-group-addon">
                <input type="checkbox" aria-label="..." id="fillister"> <!--fillister - фальцовка-->
              </span>
              <input type="text" class="form-control" aria-label="..." value="Фальцовка" readonly="">
            </div><!-- /input-group -->
        }
        <br/>
        <div @if (Model.Name == "Постраничный")
             {
                @:class="input-group hidden"
             }
             else
             {
                @:class="input-group"
             }>
            <span   class="input-group-addon" id="basic-addon2">Количество тетрадей</span>
            <input  type="text" class="form-control" id="tetr" value="1" aria-describedby="basic-addon2"
                    autocomplete="off"
                    onkeypress='return event.charCode >= 48 && event.charCode <= 57'
                    @if (Model.Name == "Постраничный")
                    {   
                        @:readonly="readonly"
                    } />
        </div>
    </form>
</div>